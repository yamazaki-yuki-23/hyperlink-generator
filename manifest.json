{
  "manifest_version": 3,
  "name": "Slack Rich Text Link Generator",
  "version": "1.0",
  "description": "Generate rich text links for Slack from selected text.",
  "permissions": ["activeTab", "contextMenus", "clipboardWrite", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
